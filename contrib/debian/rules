#!/usr/bin/make -f
# -*- mode: makefile; coding: utf-8 -*-

DEB_INSTALL_EXAMPLES_Zeepcoind += debian/examples/*
DEB_INSTALL_MANPAGES_Zeepcoind += debian/manpages/*

%:
	dh --with bash-completion $@

override_dh_auto_build:
	cd src; $(MAKE) -f makefile.unix Zeepcoind USE_ASM=1 USE_LEVELDB=1
	$(MAKE)

override_dh_auto_clean:
	if [ -f Makefile ]; then $(MAKE) clean; else rm -rf build/; rm -f Zeepcoin-qt; fi
	cd src; $(MAKE) -f makefile.unix clean

override_dh_auto_configure:
	qmake Zeepcoin-qt.pro USE_ASM=1 USE_LEVELDB=1

# Ensure wrapper is set executable
binary-post-install/Zeepcoind:
	chmod +x $(cdbs_curdestdir)usr/bin/Zeepcoind
binary-post-install/Zeepcoin-qt:
	chmod +x $(cdbs_curdestdir)usr/bin/Zeepcoin-qt
